.info-list {
  padding-top: 8px;
  background-color: #f5f5f5;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  z-index: 9999;
  background-color: #fff;
}

.bottom-bar .shopping-cart {
  width: 20%;
  float: left;
}

.bottom-bar .add-shopping-cart {
  width: 40%;
  float: left;
  text-align: center;
  color: #fff;
  background-color: #ff6700;
}

.bottom-bar .add-collect {
  width: 40%;
  float: left;
  text-align: center;
  color: #fff;
  background-color: #b0b0b0;
}
