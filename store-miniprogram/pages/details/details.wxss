/* pages/details/details.wxss */

.carousel .product-img {
  display: block;
  margin: 0 auto;
}

.pro-info {
  margin: 0 10px 10px 10px;
  overflow: hidden;
}

.pro-info .pro-title {
  width: 100%;
  float: left;
  font-size: 14px;
  font-weight: 400;
  color: #191919;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.pro-info .pro-des {
  width: 100%;
  float: left;
  font-size: 12px;
  font-weight: 400;
  line-height: 20px;
  color: #7f7f7f;
  padding: 5px 0 5px 0;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.pro-info .pro-price {
  width: 100%;
  height: 20px;
  float: left;
  font-size: 16px;
  color: #ff6700;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.pro-info .pro-price .del {
  font-size: 12px;
  height: 20px;
  margin-left: 0.5em;
  color: #7f7f7f;
  text-decoration: line-through;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

